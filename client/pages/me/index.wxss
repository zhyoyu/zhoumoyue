page{
  background-color:#dddddd;
}
.me {
  background-color: #FFFFFF;
  border: 1rpx solid #FFFFFF;
}
.me .me_basic {
  height: 230rpx;
  margin: 3%;
  /* border: 1rpx solid blue; */
}
.me .me_basic .me_text {
  font-size:30rpx;
  font-weight:900;
  font-family:'Times New Roman', Times, serif;
  margin: 0 160rpx;
  line-height: 70rpx;
  /* border: 1rpx solid red; */
}
.me_basic image {
  margin: 10rpx;
  width: 120rpx;
  height: 120rpx;  
  float: left;
  border-radius: 50%;
}
.activity_item {
  margin: 4% 0 0 0;
}
.activity_item .item {
  width: 100%;
  text-indent: 25rpx;
  display: flex;
  align-items: center;
  text-align: left;
  height:70rpx;
  background:white;
  font-size: 35rpx;
  font-weight:500;
  border-bottom: 1rpx solid #dddddd;
  /* border: 1rpx solid sandybrown; */
}
.activity_item .item image {
  margin: 0 0 0 7%;
  width: 35rpx;
  height: 28rpx;
  /* border: 1rpx solid skyblue; */
}
.tip {
  /* visibility:hidden; */
  position:relative;
  left:-20rpx;
  top: -10rpx;
    min-width: 20px;
    height: 20px;
    width: 20rpx;
    background: red;
    box-sizing: border-box;/*必须是border-box，自行体会*/
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    /*display: inline-block;/*肯定是inline-block，因为行内元素宽度auto呀*/
